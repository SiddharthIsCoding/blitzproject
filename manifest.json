{
  "manifest_version": 2,
  "name": "Reader Darkness Control",
  "version": "1.0",
  "description": "Adds adjustable darkness to Reader Mode.",
  "permissions": ["activeTab", "tabs"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Adjust Darkness"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}